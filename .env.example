# Environment Variables
# Copy this file to .env and fill in your values

# Roboflow API Key (required for SAM3 segmentation)
ROBOFLOW_API_KEY=your_roboflow_api_key_here

# Optional: Debug mode (saves intermediate images)
DEBUG_MODE=false

# =====================
# API Security Settings
# =====================

# Token Secret - MUST match frontend TOKEN_SECRET
# Generate with: openssl rand -hex 32
TOKEN_SECRET=your-secure-token-secret-here

# Allowed Origin for CORS and Origin validation
# Set to your production frontend URL (e.g., https://app.lakshmendpara.tech)
# Use * for development only (not recommended for production)
ALLOWED_ORIGIN=https://app.lakshmendpara.tech

# Rate Limiting (requests per window per IP)
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW=60
