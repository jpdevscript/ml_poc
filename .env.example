# Environment Variables
# Copy this file to .env and fill in your values

# Roboflow API Key (required for SAM3 segmentation)
ROBOFLOW_API_KEY=your_roboflow_api_key_here

# Optional: Debug mode (saves intermediate images)
DEBUG_MODE=false

# =====================
# API Security Settings
# =====================

# API Secret Key - required for frontend authentication
# Generate a secure random key: openssl rand -hex 32
API_SECRET_KEY=your-secure-api-key-here

# Allowed Origin for CORS (e.g., https://app.lakshmendpara.tech)
# Use * for development (not recommended for production)
ALLOWED_ORIGIN=https://your-domain.com
